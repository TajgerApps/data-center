{% extends 'base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    <h1>Order index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Number</th>
                <th>Contract_number</th>
                <th>Offer_number</th>
                <th>Investor</th>
                <th>Object_type</th>
                <th>Building_category</th>
                <th>Safety</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.number }}</td>
                <td>{{ order.contractNumber }}</td>
                <td>{{ order.offerNumber }}</td>
                <td>{{ order.investor }}</td>
                <td>{{ order.objectType }}</td>
                <td>{{ order.buildingCategory }}</td>
                <td>{{ order.safety }}</td>
                <td>
                    <a href="{{ path('order_show', {'id': order.id}) }}">show</a>
                    <a href="{{ path('order_edit', {'id': order.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('order_new') }}">Create new</a>
{% endblock %}
